{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Tells TypeScript this is part of a composite project,
    // which is necessary for the `tsc -b` build command.
    "composite": true,

    // Specifies where to store build information to speed up subsequent builds.
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    // --- FIXES FOR YOUR BUILD ERRORS ---

    // 1. Enables JSX support for React 17+ new transform.
    "jsx": "react-jsx",

    // 2. Sets the base directory for module resolution.
    "baseUrl": ".",

    // 3. Defines the '@' path alias to point to your 'src' directory.
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  // Specifies that only files in the 'src' directory should be
  // included in this part of the compilation.
  "include": ["src"]
}